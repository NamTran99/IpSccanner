<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_10dp"
        android:background="@color/color_bg">

        <ImageView
            android:id="@+id/imgStatusDot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_dot_alive"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvReplyFrom"
            style="@style/AppTextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            tools:text="Reply from 8.8.8.8:"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgStatusDot" />

        <TextView
            android:id="@+id/tvContent"
            style="@style/AppTextBody"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:text="Package = 32 bytes, time = 19 ms"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgStatusDot"
            app:layout_constraintTop_toBottomOf="@+id/tvReplyFrom" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>